{
  "extends": [
    "plugin:@nx/react",
    "../../.eslintrc.json",
    "plugin:react-hooks/recommended"
  ],
  "plugins": [
    "react-refresh"
  ],
  "ignorePatterns": [
    "!**/*"
  ],
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx",
        "*.js",
        "*.jsx"
      ],
      "rules": {
        "react-refresh/only-export-components": [
          "warn",
          {
            "allowConstantExport": true
          }
        ]
      }
    },
    {
      "files": [
        "*.ts",
        "*.tsx"
      ],
      "rules": {}
    },
    {
      "files": [
        "*.js",
        "*.jsx"
      ],
      "rules": {}
    }
  ]
}