{
  "plugins": [
    "@nx"
  ],
  "parser": "@typescript-eslint/parser",
  "rules": {
    "@nx/enforce-module-boundaries": [
      "error",
      {
        "enforceBuildableLibDependency": true,
        "allow": [],
        "depConstraints": [
          {
            "sourceTag": "*",
            "onlyDependOnLibsWithTags": [
              "*"
            ]
          }
        ]
      }
    ],
    "quotes": [
      "error",
      "double"
    ],
    "no-var": "error",
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "eqeqeq": [
      "error",
      "always"
    ],
    "semi": [
      "error",
      "never"
    ],
    "no-trailing-spaces": "error",
    "indent": [
      "error",
      2
    ],
    "no-empty": "error",
    "space-in-parens": [
      "error",
      "never"
    ],
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1
      }
    ],
    "no-multi-spaces": "error",
    "comma-spacing": [
      "error",
      {
        "before": false,
        "after": true
      }
    ],
    "array-bracket-spacing": [
      "error",
      "never"
    ],
    "keyword-spacing": [
      "error",
      {
        "before": true,
        "after": true
      }
    ],
    "space-before-blocks": [
      "error",
      "always"
    ],
    "brace-style": [
      "error",
      "1tbs"
    ]
  }
}